@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="container-fluid d-flex justify-content-center align-items-center" style="height: 100vh; padding: 0;">
    <div class="row w-100 g-0" style="max-width: 100%; height: 100vh;">
        <!-- Sol Fotoğraf -->
        <div class="col-md-6 d-none d-md-block" style="
            background: url('/uploads/register-background.jpg') no-repeat center center/cover;
            position: relative;">
        </div>

        <!-- Sağ Form -->
        <div class="col-md-6 d-flex justify-content-center align-items-center" style="background: #fff; box-shadow: -10px 0 20px rgba(0, 0, 0, 0.1);">
            <div class="p-5" style="width: 100%; max-width: 400px;">
                <h2 class="text-center mb-4" style="font-weight: bold; color: #333;">Kayıt Ol</h2>
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                }
                <form method="post">
                    <div class="mb-3">
                        <label for="Ad" class="form-label">Ad</label>
                        <input type="text" class="form-control" id="Ad" name="Ad" placeholder="Adınızı girin" required>
                    </div>
                    <div class="mb-3">
                        <label for="Soyad" class="form-label">Soyad</label>
                        <input type="text" class="form-control" id="Soyad" name="Soyad" placeholder="Soyadınızı girin" required>
                    </div>
                    <div class="mb-3">
                        <label for="Email" class="form-label">E-posta</label>
                        <input type="email" class="form-control" id="Email" name="Email" placeholder="E-posta adresinizi girin" required>
                    </div>
                    <div class="mb-3">
                        <label for="Telefon" class="form-label">Telefon</label>
                        <input type="tel" class="form-control" id="Telefon" name="Telefon" placeholder="Telefon numaranızı girin" required>
                    </div>
                    <div class="mb-3">
                        <label for="Sifre" class="form-label">Şifre</label>
                        <input type="password" class="form-control" id="Sifre" name="Sifre" placeholder="Şifrenizi girin" required>
                    </div>
                    <button type="submit" class="btn btn-danger w-100 py-2">Kayıt Ol</button>
                </form>
                <div class="text-center mt-3">
                    Zaten bir hesabınız var mı? <a href="/Login" class="text-danger" style="text-decoration: none;">Giriş Yap</a>
                </div>
            </div>
        </div>
    </div>
</div>

 <style>
                    /* Kayıt Ol Container */
.register-container {
    height: 100vh;
    background-color: #f9f9f9;
    display: flex;
    flex-direction: row;
    overflow: hidden;
}

/* Sol taraf: Görsel */
.register-image {
    flex: 1;
    position: relative;
}

.register-image img {
    width: 100%;
    height: 100vh;
    object-fit: cover;
}

/* Sağ taraf: Form */
.register-form {
    flex: 1;
    max-width: 400px;
    background-color: #fff;
    border-left: 1px solid #e0e0e0;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    animation: slideIn 1s ease-in-out;
}

/* Button Stil */
.btn-danger {
    background-color: #dc3545;
    border: none;
    transition: background-color 0.3s ease-in-out;
}

.btn-danger:hover {
    background-color: #b02a37;
}

/* Link Stili */
.text-danger {
    color: #dc3545;
    text-decoration: none;
}

.text-danger:hover {
    color: #b02a37;
    text-decoration: underline;
}


</style>