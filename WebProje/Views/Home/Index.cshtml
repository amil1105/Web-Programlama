@model List<HomepageCard>

@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container py-5">
    <!-- Başlık ve Açıklama -->
    <div class="text-center mb-5">
        <h1 class="display-4" style="color: #333;">@ViewData["MagazaAdi"]</h1>
        <p class="lead" style="color: #555;">Profesyonel kuaförlük ve güzellik hizmetleri ile tarzınızı yenileyin.</p>
    </div>

    <!-- Dinamik Kartlar -->
    <div id="homepageCardCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.Count; i += 3)
            {
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <div class="row">
                        @for (int j = i; j < i + 3 && j < Model.Count; j++)
                        {
                            <div class="col-md-4 d-flex justify-content-center">
                                <div class="card shadow-lg h-100" style="width: 22rem; border: none; border-radius: 15px; overflow: hidden;">
                                    <div class="card-img-container" style="height: 280px; overflow: hidden; position: relative;">
                                        <img src="@Model[j].ImagePath" class="card-img-top" alt="@Model[j].Title"
                                     style="width: 100%; height: 100%; object-fit: cover; transition: transform 0.5s ease;">
                                    </div>
                                    <div class="card-body text-center" style="background-color: #f1f1f1; padding: 20px;">
                                        <h5 class="card-title" style="color: #b30000; font-weight: bold; font-size: 1.2rem;">
                                            @Model[j].Title
                                        </h5>
                                        <p class="card-text" style="color: #555; font-size: 1rem;">
                                            @Model[j].Description
                                        </p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- Slider Kontrolleri -->
        <button class="carousel-control-prev" type="button" data-bs-target="#homepageCardCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true" style="background-color: #b30000; border-radius: 50%;"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#homepageCardCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true" style="background-color: #b30000; border-radius: 50%;"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <!-- Randevu ve Hakkımızda Butonları -->
    <div class="text-center">
        <a href="/Randevu/RandevuOlustur" class="btn btn-primary btn-lg me-3" style="background-color: #007bff; border: none;">
            Randevu Oluştur
        </a>
        <a href="#hakkimizda" class="btn btn-secondary btn-lg">
            Hakkımızda
        </a>
    </div>
</div>

<!-- Hakkımızda Bölümü -->
<div class="container py-5" id="hakkimizda">
    <h2 class="text-center mb-4" style="color: #333;">Hakkımızda</h2>
    <p style="color: #555;">
        @ViewData["MagazaAdi"], profesyonel saç kesimi, bakım ve stil hizmetleri ile müşterilerine en iyi deneyimi sunmayı amaçlayan bir kuaför salonudur.
        Kaliteli hizmet ve müşteri memnuniyetini ön planda tutarak, uzman ekibimizle size her zaman en iyisini sunuyoruz.
    </p>
</div>
<style> 
    .card {
    transition: transform 0.4s ease-in-out;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
    border-radius: 15px;
    overflow: hidden;
}

.card:hover {
    transform: scale(1.05); /* Hafif büyüme efekti */
    box-shadow: 0 15px 25px rgba(0, 0, 0, 0.2);
}

.card-img-top {
    border-top-left-radius: 15px;
    border-top-right-radius: 15px;
}

.card-title {
    font-weight: bold;
    color: #b30000; /* Kırmızı renk */
}

.card-text {
    color: #555;
}

.carousel-control-prev-icon,
.carousel-control-next-icon {
    background-color: #b30000; /* Slider kontrolü kırmızı */
    border-radius: 50%;
}

.card-img-container img:hover {
    transform: scale(1.1); /* Resmin hafifçe büyümesi */
}

</style>