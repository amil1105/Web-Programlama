@model WebProje.Models.Islem

<div class="container py-5">
    <h2>Yeni İşlem Ekle</h2>
    <form method="post">
        <div class="mb-3">
            <label for="Ad" class="form-label">İşlem Adı</label>
            <input type="text" class="form-control" id="Ad" name="Ad" required>
        </div>
        <div class="mb-3">
            <label for="Sure" class="form-label">Süre (Dakika)</label>
            <input type="number" class="form-control" id="Sure" name="Sure" required>
        </div>
        <div class="mb-3">
            <label for="Ucret" class="form-label">Ücret (₺)</label>
            <input type="number" step="0.01" class="form-control" id="Ucret" name="Ucret" required>
        </div>
        <button type="submit" class="btn btn-primary">Ekle</button>
    </form>
</div>
