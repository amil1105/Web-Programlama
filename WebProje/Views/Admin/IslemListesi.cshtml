@model IEnumerable<WebProje.Models.Islem>

<div class="container py-5">
    <h2>İşlem Listesi</h2>
    <a href="/Admin/IslemEkle" class="btn btn-success mb-3">Yeni İşlem Ekle</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>İşlem Adı</th>
                <th>Süre</th>
                <th>Ücret</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var islem in Model)
            {
                <tr>
                    <td>@islem.Id</td>
                    <td>@islem.Ad</td>
                    <td>@islem.Sure dakika</td>
                    <td>@islem.Ucret ₺</td>
                    <td>
                        <a href="/Admin/IslemSil/@islem.Id" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                    <td>
                        <a href="/Admin/IslemGuncelle/@islem.Id" class="btn btn-warning btn-sm">Güncelle</a>
                        <a href="/Admin/IslemSil/@islem.Id" class="btn btn-danger btn-sm">Sil</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
