@model WebProje.Models.Magaza

<div class="container py-5">
    <h2>Mağaza Ayarları</h2>
    <form method="post">
        <div class="mb-3">
            <label for="Ad" class="form-label">Mağaza Adı</label>
            <input type="text" class="form-control" id="Ad" name="Ad" value="@Model.Ad" required>
        </div>
        <div class="mb-3">
            <label for="Adres" class="form-label">Adres</label>
            <input type="text" class="form-control" id="Adres" name="Adres" value="@Model.Adres" required>
        </div>
        <div class="mb-3">
            <label for="Telefon" class="form-label">Telefon</label>
            <input type="text" class="form-control" id="Telefon" name="Telefon" value="@Model.Telefon" required>
        </div>
        <button type="submit" class="btn btn-primary">Güncelle</button>
    </form>
</div>
