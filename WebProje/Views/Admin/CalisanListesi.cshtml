@model IEnumerable<WebProje.Models.Calisan>

<div class="container py-5">
    <h2 class="text-center mb-4" style="color: #333;">Çalışan Listesi</h2>

    <div class="text-end mb-3">
        <a href="/Admin/CalisanEkle" class="btn btn-primary">Yeni Çalışan Ekle</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Ad Soyad</th>
                <th>Uzmanlık Alanları</th>
                <th>Telefon</th>
                <th>Adres</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var calisan in Model)
            {
                <tr>
                    <td>@calisan.Id</td>
                    <td>@calisan.Ad @calisan.Soyad</td>
                    <td>@calisan.UzmanlikAlanlari</td>
                    <td>@calisan.Telefon</td>
                    <td>@calisan.Adres</td>
                    <td>
                        <a href="/Admin/CalisanGuncelle/@calisan.Id" class="btn btn-warning btn-sm">Güncelle</a>
                        <a href="/Admin/CalisanSil/@calisan.Id" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
