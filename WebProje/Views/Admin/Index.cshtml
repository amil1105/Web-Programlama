@{
    ViewData["Title"] = "Admin Panel";
}

<div class="container py-5">
    <h2>Admin Panel</h2>
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Mağaza Ayarları</h5>
                    <p class="card-text">Mağaza bilgilerini düzenleyin.</p>
                    <a href="/Admin/MagazaAyar" class="btn btn-primary">Düzenle</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Çalışan Yönetimi</h5>
                    <p class="card-text">Çalışanları yönetin.</p>
                    <a href="/Admin/CalisanListesi" class="btn btn-primary">Yönet</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">İşlem Yönetimi</h5>
                    <p class="card-text">İşlemleri yönetin.</p>
                    <a href="/Admin/IslemListesi" class="btn btn-primary">Yönet</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Tüm Randevular</h5>
                    <p class="card-text">Tüm Randevuları Görüntüle.</p>
                    <a href="/Randevu/TumRandevular" class="btn btn-primary">Görüntüle</a>
                </div>
            </div>
        </div>
    </div>
</div>

