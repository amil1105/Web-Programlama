@model WebProje.Models.Calisan

<div class="container py-5">
    <h2 class="text-center mb-4" style="color: #333;">Yeni Çalışan Ekle</h2>

    <form method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <!-- Ad -->
        <div class="mb-3">
            <label for="Ad" class="form-label">Ad</label>
            <input type="text" class="form-control" id="Ad" name="Ad" required>
        </div>

        <!-- Soyad -->
        <div class="mb-3">
            <label for="Soyad" class="form-label">Soyad</label>
            <input type="text" class="form-control" id="Soyad" name="Soyad" required>
        </div>

        <!-- Telefon -->
        <div class="mb-3">
            <label for="Telefon" class="form-label">Telefon</label>
            <input type="text" class="form-control" id="Telefon" name="Telefon" required>
        </div>

        <!-- Adres -->
        <div class="mb-3">
            <label for="Adres" class="form-label">Adres</label>
            <textarea class="form-control" id="Adres" name="Adres" rows="3" required></textarea>
        </div>

        <!-- Profil Fotoğrafı -->
        <div class="mb-3">
            <label for="ProfilFoto" class="form-label">Profil Fotoğrafı</label>
            <input type="file" class="form-control" id="ProfilFoto" name="ProfilFoto" accept="image/*">
        </div>

        <!-- Email -->
        <div class="mb-3">
            <label for="Email" class="form-label">Email</label>
            <input type="email" class="form-control" id="Email" name="Email" required>
        </div>

        <!-- Şifre -->
        <div class="mb-3">
            <label for="Sifre" class="form-label">Şifre</label>
            <input type="password" class="form-control" id="Sifre" name="Sifre" required>
        </div>

        <!-- Yapabileceği İşlemler -->
        <div class="mb-3">
            <label for="Islemler" class="form-label">Yapabileceği İşlemler</label>
            <select id="Islemler" name="IslemIds" multiple class="form-select" required>
                @foreach (var islem in ViewBag.Islemler)
                {
                    <option value="@islem.Id">@islem.Ad (@islem.Ucret ₺, @islem.Sure dakika)</option>
                }
            </select>
            <small class="form-text text-muted">Birden fazla işlem seçmek için Ctrl (Windows) veya Command (Mac) tuşunu kullanın.</small>
        </div>

        <!-- Çalışma Günleri -->
        <div class="mb-3">
            <label for="CalismaGunleri" class="form-label">Çalışma Günleri</label>
            <select id="CalismaGunleri" name="CalismaGunleri" multiple class="form-select" required>
                @foreach (var gun in Enum.GetValues(typeof(WebProje.Models.Gunler)))
                {
                    <option value="@gun">@gun</option>
                }
            </select>
            <small class="form-text text-muted">Birden fazla gün seçmek için Ctrl (Windows) veya Command (Mac) tuşunu kullanın.</small>
        </div>

        <!-- Çalışma Saatleri -->
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="CalismaBaslangicSaati" class="form-label">Çalışma Başlangıç Saati</label>
                <input type="time" class="form-control" id="CalismaBaslangicSaati" name="CalismaBaslangicSaati" required>
            </div>
            <div class="col-md-6">
                <label for="CalismaBitisSaati" class="form-label">Çalışma Bitiş Saati</label>
                <input type="time" class="form-control" id="CalismaBitisSaati" name="CalismaBitisSaati" required>
            </div>
        </div>

        <!-- Butonlar -->
        <div class="text-end">
            <button type="submit" class="btn btn-primary">Kaydet</button>
            <a href="/Admin/CalisanListesi" class="btn btn-secondary">İptal</a>
        </div>
    </form>
</div>
