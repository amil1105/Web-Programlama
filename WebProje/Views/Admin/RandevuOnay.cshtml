@model List<WebProje.Models.Randevu>

<div class="container py-5">
    <h2 class="text-center mb-4">Randevu Onaylama</h2>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info text-center">Onay bekleyen randevunuz bulunmamaktadır.</div>
    }
    else
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Tarih</th>
                    <th>Saat</th>
                    <th>İşlem</th>
                    <th>Kullanıcı ID</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var randevu in Model)
                {
                    <tr>
                        <td>@randevu.Tarih.ToString("dd.MM.yyyy")</td>
                        <td>@randevu.Saat</td>
                        <td>@randevu.Islem.Ad</td>
                        <td>@randevu.KullaniciId</td>
                        <td>
                            <form method="post" action="/Admin/RandevuDurumGuncelle">
                                <input type="hidden" name="randevuId" value="@randevu.Id" />
                                <button type="submit" name="durum" value="1" class="btn btn-success btn-sm">Onayla</button>
                                <button type="submit" name="durum" value="2" class="btn btn-danger btn-sm">Reddet</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
