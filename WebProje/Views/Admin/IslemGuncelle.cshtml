@model WebProje.Models.Islem

<div class="container py-5">
    <h2>İşlem Güncelle</h2>
    <form method="post">
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="mb-3">
            <label for="Ad" class="form-label">İşlem Adı</label>
            <input type="text" class="form-control" id="Ad" name="Ad" value="@Model.Ad" required>
        </div>
        <div class="mb-3">
            <label for="Sure" class="form-label">Süre (Dakika)</label>
            <input type="number" class="form-control" id="Sure" name="Sure" value="@Model.Sure" required>
        </div>
        <div class="mb-3">
            <label for="Ucret" class="form-label">Ücret (₺)</label>
            <input type="number" step="0.01" class="form-control" id="Ucret" name="Ucret" value="@Model.Ucret" required>
        </div>
        <button type="submit" class="btn btn-primary">Kaydet</button>
        <a href="/Admin/IslemListesi" class="btn btn-secondary">İptal</a>
    </form>
</div>
