@model List<WebProje.Models.Randevu>

<div class="container py-5">
    <h2 class="text-center mb-4">Tüm Randevularım</h2>

    @if (Model.Count == 0)
    {
        <div class="alert alert-info text-center">Henüz bir randevunuz bulunmamaktadır.</div>
    }
    else
    {
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Tarih</th>
                    <th>Saat</th>
                    <th>İşlem</th>
                    <th>Ücret</th>
                    <th>Durum</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var randevu in Model)
                {
                    <tr>
                        <td>@randevu.Tarih.ToString("dd.MM.yyyy")</td>
                        <td>@randevu.Saat</td>
                        <td>@randevu.Islem.Ad</td>
                        <td>@randevu.Islem.Ucret ₺</td>
                        <td>
                            @switch (randevu.RandevuDurum)
                            {
                                case 0:
                                    <span class="badge bg-warning">Bekliyor</span>
                                    break;
                                case 1:
                                    <span class="badge bg-success">Onaylı</span>
                                    break;
                                case 2:
                                    <span class="badge bg-danger">Reddedildi</span>
                                    break;
                                default:
                                    <span class="badge bg-secondary">Bilinmiyor</span>
                                    break;
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
