@{
    ViewData["Title"] = "Giriş Yap";
}

<div class="container-fluid d-flex justify-content-center align-items-center" style="height: 100vh; padding: 0;">
    <div class="row w-100 g-0" style="max-width: 100%; height: 100vh;">
        <!-- Sol Fotoğraf -->
        <div class="col-md-6 d-none d-md-block" style="
            background: url('/uploads/login-background.jpg') no-repeat center center/cover;
            position: relative;">
        </div>

        <!-- Sağ Form -->
        <div class="col-md-6 d-flex justify-content-center align-items-center" style="background: #fff; box-shadow: -10px 0 20px rgba(0, 0, 0, 0.1);">
            <div class="p-5" style="width: 100%; max-width: 400px;">
                <h2 class="text-center mb-4" style="font-weight: bold; color: #333;">Giriş Yap</h2>
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
                }
                <form method="post">
                    <div class="mb-3">
                        <label for="email" class="form-label">E-posta</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="E-posta adresinizi girin" required>
                    </div>
                    <div class="mb-3">
                        <label for="sifre" class="form-label">Şifre</label>
                        <input type="password" class="form-control" id="sifre" name="sifre" placeholder="Şifrenizi girin" required>
                    </div>
                    <div class="form-check mb-3">
                        <input type="checkbox" class="form-check-input" id="rememberMe">
                        <label class="form-check-label" for="rememberMe">Beni Hatırla</label>
                    </div>
                    <button type="submit" class="btn btn-danger w-100 py-2">Giriş Yap</button>
                </form>
                <div class="text-center mt-3">
                    <a href="/Register" class="text-danger" style="text-decoration: none;">Kayıt Ol</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Login Container */
.login-container {
    height: 100vh;
    background-color: #f9f9f9;
    display: flex;
    flex-direction: row;
    overflow: hidden;
}

/* Sol taraf: Görsel */
.login-image {
    flex: 1;
    background-color: #333;
    position: relative;
}

.login-image img {
    width: 100%;
    height: 100vh;
    object-fit: cover;
}

/* Sağ taraf: Form */
.login-form {
    flex: 1;
    max-width: 400px;
    background-color: #fff;
    border-left: 1px solid #e0e0e0;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    animation: fadeIn 1.2s ease-in-out;
}

/* Button ve Link Stil */
.btn-danger {
    background-color: #dc3545;
    border: none;
    transition: background-color 0.3s ease-in-out;
}

.btn-danger:hover {
    background-color: #b02a37;
}

.text-danger {
    color: #dc3545;
    text-decoration: none;
}

.text-danger:hover {
    color: #b02a37;
    text-decoration: underline;
}







</style>
