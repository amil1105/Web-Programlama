@model IEnumerable<WebProje.Models.Randevu>

<div class="container py-5">
    <h2>Randevularım</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Tarih</th>
                <th>Saat</th>
                <th>Çalışan</th>
                <th>İşlem</th>
                <th>Ücret</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var randevu in Model)
            {
                <tr>
                    <td>@randevu.Tarih.ToShortDateString()</td>
                    <td>@randevu.Saat</td>
                    <td>@randevu.Calisan.Ad @randevu.Calisan.Soyad</td>
                    <td>@randevu.Islem.Ad</td>
                    <td>@randevu.Islem.Ucret ₺</td>
                </tr>
            }
        </tbody>
    </table>
</div>
